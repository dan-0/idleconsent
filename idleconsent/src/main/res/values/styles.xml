<resources>

    <style name="dialog">

    </style>

    <style name="dialog.content">
        <item name="android:layout_marginStart">@dimen/dialog_content_padding</item>
        <item name="android:layout_marginEnd">@dimen/dialog_content_padding</item>
        <item name="android:divider">@drawable/dialog_content_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="dialog.text">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="dialog.text.link">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog.checkbox">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:checked">true</item>
    </style>
</resources>