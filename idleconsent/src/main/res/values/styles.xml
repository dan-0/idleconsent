<resources>

    <style name="idledialog"/>
    <style name="idledialog.headerspace"/>

    <style name="idledialog.content">
        <item name="android:layout_marginStart">@dimen/dialog_content_padding</item>
        <item name="android:layout_marginEnd">@dimen/dialog_content_padding</item>
        <item name="android:divider">@drawable/dialog_content_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="idledialog.text">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="idledialog.text.link">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorLink</item>
    </style>

    <style name="idledialog.checkbox">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:checked">true</item>
    </style>
</resources>